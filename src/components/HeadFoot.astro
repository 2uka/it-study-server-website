---
layout: "@astrojs/layouts/Main.astro"
---

<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>IT学習サーバー</title>
  <style>
    :root {
      --bg-color: #f9f9f9;
      --text-color: #000;
      --header-bg: #fff;
      --border-color: #ddd;
      
      --base-font-size: 16px;
      --header-font-size: 1.7rem;
      --logo-font-size: 2rem;
      --menu-font-size: 1.7rem;
    }

    .dark-mode {
      --bg-color: #121212;
      --text-color: #fff;
      --header-bg: #1e1e1e;
      --border-color: #333;
    }

    body {
      font-family: 'Inter', sans-serif;
      font-weight: 500;
      margin: 0;
      padding: 0;
      background-color: var(--bg-color);
      color: var(--text-color);
      transition: background-color 0.3s, color 0.3s;
      font-size: var(--base-font-size);
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.5rem 2rem;
      background-color: var(--header-bg);
      border-bottom: 1px solid var(--border-color);
      font-size: var(--header-font-size);
    }

    .logo {
      display: flex;
      align-items: center;
      font-size: var(--logo-font-size);
    }

    .logo img {
      height: 90px;
      margin-right: 1rem;
    }

    .menu {
      font-size: var(--menu-font-size);
      display: flex;
      align-items: center;
      min-width: 250px;
      justify-content: flex-end;
    }

    .dark-mode-toggle {
      position: relative;
      background: none;
      border: none;
      cursor: pointer;
      font-size: 2.5rem;
      margin-left: 1.5rem;
      color: inherit;
      display: inline-block;
      width: 40px;
      height: 40px;
      text-align: center;
      line-height: 40px;
    }

    #mode-icon {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    footer {
      display: flex;
      justify-content: center;
      align-items: flex-end;
      height: 120px;
      padding: 1.2rem;
      font-size: 1.1rem;
      background-color: var(--header-bg);
      border-top: 1px solid var(--border-color);
      text-align: center;
    }
  </style>
</head>
<body>
  <header>
    <div class="logo">
      <img src="/src/assets/logo_250125.png" alt="Logo">
      <span>IT学習サーバー</span>
    </div>
    <div class="menu">
      メンバー一覧
      <button class="dark-mode-toggle" aria-label="ダークモード切り替え">
        <span id="mode-icon">☀</span>
      </button>
    </div>
  </header>
  <footer>
    Copyright © IT学習 All Rights Reserved.
  </footer>

  <script>
    const darkModeToggle = document.querySelector('.dark-mode-toggle');
    const modeIcon = document.getElementById('mode-icon');
    const body = document.body;

    if (localStorage.getItem('darkMode') === 'enabled') {
      body.classList.add('dark-mode');
      modeIcon.textContent = '☽';
      modeIcon.style.color = 'white';
    }

    darkModeToggle.addEventListener('click', () => {
      body.classList.toggle('dark-mode');
      
      if (body.classList.contains('dark-mode')) {
        localStorage.setItem('darkMode', 'enabled');
        modeIcon.textContent = '☽';
        modeIcon.style.color = 'white';
      } else {
        localStorage.removeItem('darkMode');
        modeIcon.textContent = '☀';
        modeIcon.style.color = 'inherit';
      }
    });
  </script>
</body>
</html>
